{
  "name": "@sample/nextjs",
  "version": "0.2.0",
  "description": "Next.js specific components and utilities",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "tsc": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sample/ui": "workspace:*",
    "@sample/util": "workspace:*"
  },
  "peerDependencies": {
    "next": "^14.0.0",
